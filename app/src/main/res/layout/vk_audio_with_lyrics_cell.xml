<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingRight="@dimen/right_padding"
    android:paddingLeft="0dp"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/list_item_selectable_background"/>
    <ImageButton
        android:id="@+id/audio_cell_lyrics_button"
        android:src="@drawable/ic_description_black_24dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginLeft="@dimen/left_padding" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginLeft="8dp" >
        <TextView
            android:id="@+id/audio_cell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="16sp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/audio_cell_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:maxLines="1"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/audio_cell_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>